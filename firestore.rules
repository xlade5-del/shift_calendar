rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if user is the document owner
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Helper function to get user's partner ID
    function getPartnerIdForUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.partnerId;
    }

    // Helper function to check if user is linked to another user as partner
    function isPartner(userId) {
      return isSignedIn() && getPartnerIdForUser(request.auth.uid) == userId;
    }

    // ============================================================================
    // USERS COLLECTION
    // ============================================================================
    match /users/{userId} {
      // Users can read their own data and their partner's data
      allow read: if isOwner(userId) || isPartner(userId);

      // Users can only create/update their own user document
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);

      // Users cannot delete their own account (implement via Cloud Function if needed)
      allow delete: if false;
    }

    // ============================================================================
    // EVENTS COLLECTION
    // ============================================================================
    match /events/{eventId} {
      // Users can read their own events and their partner's events
      allow read: if isSignedIn() && (
        isOwner(resource.data.userId) ||
        isPartner(resource.data.userId)
      );

      // Users can only create events for themselves
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can only update/delete their own events
      allow update: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() &&
        resource.data.userId == request.auth.uid;
    }

    // ============================================================================
    // PARTNER CODES COLLECTION
    // ============================================================================
    match /partnerCodes/{code} {
      // Anyone authenticated can read partner codes (needed for validation)
      allow read: if isSignedIn();

      // Users can create partner codes for themselves
      allow create: if isSignedIn() &&
        request.resource.data.userId == request.auth.uid;

      // Users can update codes they created or when linking as partner
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        request.resource.data.usedBy == request.auth.uid
      );

      // Users cannot delete partner codes
      allow delete: if false;
    }

    // ============================================================================
    // DEFAULT DENY
    // ============================================================================
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
